<configuration>

    <contextName>Snake-bot-client</contextName>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
            by default -->
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %-5level %logger{0} - %msg \(%t\) %n</pattern>
        </encoder>
    </appender>

    <logger name="se" level="INFO"/>
    <!-- Uncomment for debug-logging of client <logger name="se.cygni.paintbot.client" level="DEBUG"/> -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>

